@{
    ViewBag.Title = "shop cart";
}
<main>
    <!-- Breadcrumb -->
    <div class="py-3 bg-gray-100">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 my-2">
                    <h1 class="m-0 h4 text-center text-lg-start">Cart</h1>
                </div>
                <div class="col-lg-6 my-2">
                    <ol class="breadcrumb dark-link m-0 small justify-content-center justify-content-lg-end">
                        <li class="breadcrumb-item"><a class="text-nowrap" href="~/">Home</a></li>
                        <li class="breadcrumb-item"><a class="text-nowrap" href="~/cart">Cart</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- End Breadcrumb -->
    <section class="section">
        <div class="container">
            <div class="row gy-4">
                <!-- Cart Items -->
                <div class="col-lg-8">
                    <div class="d-flex justify-content-between align-items-center pb-4 border-bottom mb-4">
                        <h2 class="h5 mb-0 your-cart-total-items"></h2>

                        <a class="btn btn-outline-primary btn-sm ps-2" href="@Url.RouteUrl("collections")">
                            <i class="ci-arrow-left me-2"></i>Continue Shopping
                        </a>
                    </div>
                    <!-- Item-->
                    <div id="CartContainer">
                    </div>
                    <!-- Item-->

                    <p id="updatecartalert" class="text-danger"></p>
                    <button class="btn btn-primary d-block w-100 mt-4 updateCart-btn" type="button" id="updateCart">
                        <i class="bi-arrow-repeat fs-base me-2"></i>Update cart
                    </button>

                </div>
                <!-- Cart Sidebar -->
                <div class="col-lg-4 ps-xl-7">
                    <!-- Shipping estimates -->
                    <div class="card mb-4 d-none">
                        <div class="card-header bg-transparent py-3" role="tab">
                            <a class="m-0 h5 shipping-collapse-toggle" href="#collapseOne">Shipping estimates</a>
                        </div>
                        <div class="card-body panel-collapse collapse in" id="collapseOne" role="tabpanel" aria-labelledby="headingOne">

                            <div class="mb-3">
                                <select class="statelist form-select">
                                    <option value="0">State</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <select class="districtlist form-select">
                                    <option value="0">District</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <select class="citylist form-select">
                                    <option value="0">City</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <input id="pincode" class="form-control" type="text" value="" placeholder="ZIP / Postal code" required="">
                            </div>

                            <p id="invalidcalculateShippingAmount" class="text-danger response-msg-lbl"></p>
                            <button class="btn btn-outline-primary d-block w-100" type="button" id="calculateShippingAmount">
                                Calculate shipping
                            </button>

                        </div>
                    </div>
                    <!-- Order Total -->
                    <div class="card">
                        <div class="card-header bg-transparent py-3">
                            <h6 class="m-0 h5">Order Total</h6>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="me-2 text-body">Shipping</h6><span id="shippingAmountDisplay" class="text-end"><i class="fa-solid fa-indian-rupee-sign"></i> </span>
                                </li>
                                <li class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="me-2 text-body">Subtotal</h6><span id="productTotalDisplay" class="productTotalDisplay text-end"><i class="fa-solid fa-indian-rupee-sign"></i></span>
                                </li>
                                <li class="d-flex justify-content-between align-items-center border-top pt-3 mt-3">
                                    <h6 class="me-2">Grand Total</h6><span id="grandTotalDisplay" class="text-end text-mode"><i class="fa-solid fa-indian-rupee-sign"></i></span>
                                </li>
                            </ul>
                            <div class="pt-2 pb-4">
                                <div class="d-flex">
                                    <input type="text" name="promo" placeholder="Apply promo code" class="form-control form-control-sm">
                                    <button class="btn btn-dark btn-sm ms-2">Apply</button>
                                </div>
                            </div>
                            <div class="d-grid gap-2 mx-auto">
                                <button type="button" id="proceed-to-checkout-btn" class="btn btn-primary">
                                    <i class="fa-solid fa-credit-card me-2"></i>
                                    Proceed to Checkout
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>



