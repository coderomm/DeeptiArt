@model DeeptiArt.Models.ProductTbl

@{
    ViewBag.Title = Model.Name;
}
<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap');

    .ReviewRating {
        border: none;
        float: left;
    }

        .ReviewRating > input {
            display: none;
        }

        .ReviewRating > label:before {
            margin: 0px 2px;
            font-size: 20px;
        }


        .ReviewRating > label {
            color: #4b566b;
            float: right;
        }

        .ReviewRating > input:checked ~ label, .ReviewRating:not(:checked) > label:hover, .ReviewRating:not(:checked) > label:hover ~ label {
            /* show gold star when clicked */
            /* hover current star */
            color: #fea569;
        }
            /* hover previous stars in list */
            .ReviewRating > input:checked + label:hover, .ReviewRating > input:checked ~ label:hover, .ReviewRating > label:hover ~ input:checked ~ label, .ReviewRating > input:checked ~ label:hover ~ label {
                /* hover current star when changing rating */
                /* lighten current selection */
                color: #d2a3a9;
                cursor: pointer;
            }
</style>
<!-- Main -->
<main>
    @{
        int totalreviews = 0;
        int totalrating = 0;
        double avgrating = 0;
        double emptystarsoutoffive = 0;
    }
    @foreach (var Reviewitem in ViewBag.ReviewTables)
    {
        if (Model.Id == Reviewitem.productid)
        {
            totalreviews++;
            totalrating += Convert.ToInt32(Reviewitem.rating);
        }

        avgrating = totalreviews > 0 ? (double)totalrating / totalreviews : 0;
        avgrating = Math.Round(avgrating, 2); // Round to two decimal places
        emptystarsoutoffive = 5 - avgrating;
    }
    <!-- Breadcrumb -->
    <div class="py-3 bg-gray-100">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 my-2">
                    <h1 class="m-0 h4 text-center text-lg-start">@Model.Name</h1>
                </div>
                <div class="col-lg-6 my-2">
                    <ol class="breadcrumb dark-link m-0 small justify-content-center justify-content-lg-end">
                        <li class="breadcrumb-item"><a class="text-nowrap" href="~/"><i class="fa-solid fa-home"></i> Home</a></li>
                        <li class="breadcrumb-item"><a class="text-nowrap" href="~/collections">Collections</a></li>
                        <li class="breadcrumb-item text-nowrap active" aria-current="page">Artworks</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- End Breadcrumb -->
    <!-- Product Details -->
    <section class="product-details py-6">
        <div class="container">
            <div class="row">
                <!-- Product Gallery -->
                <div class="col-lg-6 lightbox-gallery product-gallery">
                    <div class="swiper swiper_gallery">
                        <div class="swiper-wrapper">
                            @foreach (var item in ViewBag.FrameTbls)
                            {
                                <div class="swiper-slide">
                                    <div class="pd-gallery-slide">
                                        <a class="gallery-link"
                                           href="~/Content/assets/projectImages/Frame/@item.FrameImage"><i class="bi bi-arrows-fullscreen"></i></a>

                                        <img src="~/Content/assets/projectImages/Frame/@item.FrameImage"
                                             class="img-fluid position-relative" style="z-index:1;"
                                             title="@Url.Encode(item.FrameName.Replace(" ", "-").ToLower())" alt="">

                                        <img src="~/Content/assets/projectImages/Products/@Model.Image"
                                             class="img-fluid" title="@Url.Encode(Model.Name.Replace(" ", "-").ToLower())" alt=""
