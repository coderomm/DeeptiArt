                                    <i class="fa-solid fa-scissors"></i>Size guide
                                </a>
                                <a href="#" class="" data-bs-toggle="modal" data-bs-target="#px_shipping_modal">
                                    <i class="fa-solid fa-truck me-2"></i>Shipping
                                </a>
                                <a href="#" class="ms-auto" data-bs-toggle="modal" data-bs-target="#px_ask_modal">
                                    <i class="fa-solid fa-envelope ms-auto"></i>Ask about product
                                </a>
                            </div>
                            <div class="pt-3 border-top mt-3 small">
                                <p class="theme-link mb-2">
                                    <label class="m-0 text-mode">Categories:</label> <a href="@Url.RouteUrl("catcollections")">@Model.CatName</a>, <a href="@Url.RouteUrl("subcatcollections")">@Model.SubcatName</a>
                                </p>
