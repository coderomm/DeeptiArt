                            @foreach (var item in ViewBag.FrameTbls)
                            {
                                <div class="swiper-slide">
                                    <div class="pd-gallery-slide-thumb">
                                        <img src="~/Content/assets/projectImages/Frame/@item.FrameImage" title="@Url.Encode(item.FrameName.Replace(" ", "-").ToLower())"
