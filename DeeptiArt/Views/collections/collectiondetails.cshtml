                            <div class="col-lg-7 pe-lg-10">
                                <h5>Details Description</h5>
                                <blockquote class="bg-gray-100 p-3 lead fw-400 mt-5 text-mode border-start border-primary border-5">
                                    @Model.Details
                                </blockquote>
                            </div>
                            <div class="col-lg-5">
                                <div class="pb-3">
                                    <img src="~/Content/assets/projectImages/Products/@Model.Image" class="img-fluid" title="@Url.Encode(Model.Name.Replace(" ", "-").ToLower())" alt="@Url.Encode(Model.Name.Replace(" ", "-").ToLower())">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="px_information" role="tabpanel" aria-labelledby="pd_information_tab">
                        <div class="row">
                            <div class="col-lg-6">
                                <table class="table text-sm">
                                    <tbody>
                                        <tr>
                                            <th class="fw-500 text-mode">Category : </th>
                                            <td class="text-dark">@Model.CatName</td>
                                        </tr>
                                        <tr>
                                            <th class="fw-500 text-mode">Type : </th>
                                            <td class="text-dark">@Model.SubcatName</td>
                                        </tr>
                                        <tr>
                                            <th class="fw-500 text-mode">Size : </th>
                                            <td class="text-dark">05in x 15in</td>
                                        </tr>

                                        <tr>
                                            <th class="fw-500 text-mode">Created in : </th>
                                            <td class="text-dark">
                                                @Model.rts.ToString("MMMM yyyy")
                                            </td>
                                        </tr>
                                        <tr>
                                            <th class="fw-500 text-mode">Sold by : </th>
                                            <td class="text-dark">Artist</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-lg-6">
                                <table class="table text-sm">
                                    <tbody>

                                        <tr>
                                            <th class="fw-500 text-mode">Artwork : </th>
                                            <td class="text-dark">Original</td>
                                        </tr>
                                        <tr>
                                            <th class="fw-500 text-mode">Quality : </th>
                                            <td class="text-dark">Museum Quality - 100% Hand-Made</td>
                                        </tr>
                                        <tr>
                                            <th class="fw-500 text-mode">International shipping : </th>
                                            <td class="text-dark">Yes</td>
                                        </tr>

                                        <tr>
                                            <th class="fw-500 text-mode">Domestic Ships Within : </th>
                                            <td class="text-dark">7 - 10 business days</td>
                                        </tr>
                                        <tr>
                                            <th class="fw-500 text-mode">International Ships Within : </th>
                                            <td class="text-dark">15 - 18 business days</td>
                                        </tr>
                                        <tr>
                                            <th class="fw-500 text-mode">To be delivered as: </th>
                                            <td class="text-dark">Rolled With Frame</td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="pd_reviews" role="tabpanel" aria-labelledby="pd_reviews_tab">
                        <div class="row">
                            <div class="col-lg-7 pe-lg-8">
                                <div class="row align-items-end">
                                    <div class="col-sm-6">
                                        <h5 class="m-0">Customer Reviews</h5>
                                        <div class="rating-star small">
                                            <span>
                                                @avgrating.ToString("0.00") out of 5
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <i class="fa-solid fa-star @(i <= avgrating ? "active" : "")"></i>
                                                }
                                            </span>
                                            <br />
                                            <span>(Based on @totalreviews @(totalreviews > 1 ? "reviews" : "review"))</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 text-sm-end"><a href="~/testimonials">View all reviews</a></div>
                                </div>
                                @foreach (var item in ViewBag.ReviewTables)
                                {
                                    if (Model.Id == item.productid)
                                    {
                                        <div class="d-flex review-box border-top mt-4 pt-4">
                                            <div>
                                                <div class="review-image" style="display: flex; justify-content: center; align-items: center;">
                                                    @if (!string.IsNullOrEmpty(item.profilephoto))
                                                    {
                                                        <img class="img-fluid" src="~/Content/assets/projectImages/ReviewerProfileImage/@item.profilephoto"
                                                             title="@item.profilephoto" alt="">
                                                    }
                                                    else
                                                    {
                                                        <i class="fa-solid fa-user img-fluid" style="font-size:40px;"></i>
                                                    }
                                                </div>
                                            </div>
                                            <div class="col ps-3">
                                                <h6>@item.username</h6>
                                                <div class="rating-star small">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        <i class="fa-solid fa-star @(i <= item.rating ? "active" : "")"></i>
                                                    }
                                                    <span>@item.rts.ToString("dd MMMM yyyy")</span>
                                                </div>
                                                <h6 class="m-0 pt-2">@item.title</h6>
                                                <p class="m-0 pt-1">@item.comment</p>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            <div class="col-lg-5">
                                <div class="border p-4 sticky-lg-top review-form mt-4 mt-lg-0">
                                    <h5 class="">WRITE A REVIEW</h5>

                                    @using (Html.BeginForm("AddReview", "user", FormMethod.Post, new { @enctype = "multipart/form-data", id = "AddReviewForm" }))
                                    {
                                <div class="row g-2">
                                    <div class="col-sm-12 mb-2">
                                        <label class="form-label m-0 pe-3 w-100">Rating</label>
                                        <div class="rating-star ReviewRating">
                                            @for (int i = 5; i >= 1; i--)
                                            {
                                                <input type="radio" id="star@(i)" name="rating" value="@i" @(i == 5 ? "checked" : "") />
                                                <label class="fa-solid fa-star" for="star@(i)" title="@i stars"></label>
                                            }
                                            <input type="text" name="ProductID" value="@Model.Id" hidden />
                                        </div>
                                    </div>
                                    <div class="col-sm-12 mb-2">
                                        <label class="form-label">Review Title</label>
                                        <input type="text" name="title" class="form-control form-control-sm" placeholder="Give your review a title">
                                        <p id="titleReqAlertMsg" class="mb-2" style="color: #e63946; display: none;"></p>
                                    </div>
                                    <div class="col-sm-12 mb-2">
                                        <label class="form-label">Body of Review (100)</label>
                                        <textarea rows="5" name="comment" maxlength="100" class="form-control" placeholder="Write your comments here"></textarea>
                                        <p id="commentReqAlertMsg" class="mb-2" style="color: #e63946; display: none;"></p>
                                    </div>
                                    <div class="col-sm-12 mb-2">
                                        <label class="form-label">Picture (Optional)</label>
                                        <input type="file" name="profilephoto" id="profilephoto" value="profilephoto" class="form-control form-control-sm">
                                    </div>
                                    <div class="col-sm-12 mb-2">
                                        <label class="form-label">Name (Displayed Publicly Like <span style="color: #e63946;">Om Sharma</span>)</label>
                                        <input type="text" name="username" class="form-control form-control-sm" placeholder="Enter your name (public)">
                                        <p id="usernameReqAlertMsg" class="mb-2" style="color: #e63946; display: none;"></p>
                                    </div>
                                    <div class="col-sm-12 mb-2">
                                        <label class="form-label">Email</label>
                                        <input type="text" id="useremail" name="useremail" class="form-control form-control-sm" placeholder="Enter your email (private)">
                                        <p id="useremailReqAlertMsg" class="mb-2" style="color: #e63946; display: none;"></p>
                                    </div>
                                    <p id="ReqAlertMsg" class="m-1" style="color: #e63946;"></p>

                                    <div class="col-12 pt-2">
                                        <button type="submit" class="px-2 btn btn-primary btn-sm rounded-1">Submit Review</button>
                                        <button class="ms-2 px-2 btn btn-mode btn-sm rounded-1">Cancel Review</button>
                                    </div>

                                </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
