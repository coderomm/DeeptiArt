@model DeeptiArt.Models.SubCategoryTbl

@{
    ViewBag.Title = "Edit Sub Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Forms</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Form Layouts</li>
                    </ol>
                </nav>
            </div>

        </div>
        <!--end breadcrumb-->

        <div class="row">
            <div class="col-lg-12">
                <h6 class="mb-0 text-uppercase">Edit Sub Category</h6>
                <hr>
                <div class="card border-top border-0 border-4 border-primary">
                    <div class="card-body p-4">
                        <div class="card-title d-flex align-items-center">

                            <h5 class="mb-0 text-primary">Edit Sub Category</h5>
                        </div>
                        <hr>
                        @using (Html.BeginForm("EditSubCategory", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row g-3" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="col-lg-4 col-12">
                                <label for="CID" class="form-label">Select Main Category</label>
                                <div class="input-group">
                                    @Html.DropDownListFor(model => model.CID, ViewBag.MainCategoryList as SelectList, "Select", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="col-lg-4 col-12">
                                <label for="SubCategoryName" class="form-label">Sub Category Name</label>
                                <div class="input-group">
                                    <input value="@Model.SubCategoryName" name="SubCategoryName" class="form-control" type="text" id="SubCategoryName">
                                </div>
                                @Html.Hidden("CatName", null, new { id = "CatName" })
                            </div>

                            <div class="col-lg-4 col-12">
                                <label for="SubCategoryImage" class="form-label">Sub Category Image</label>
                                <div class="input-group">
                                    <input name="SubCategoryImage" class="form-control" type="file" id="SubCategoryImage">
                                    <input value="@Model.SubCategoryImage" name="SubCategoryImage" type="text" hidden>
                                    <img src="@Url.Content("~/Content/Assets/projectImages/Category/" + @Model.SubCategoryImage)" class="img-fluid" height="50" width="50" />
                                </div>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary"><i class="bx bxs-check-circle"></i> Edit Sub Category</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

