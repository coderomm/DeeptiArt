@model IEnumerable<DeeptiArt.Models.HomeBannerSliderTbl>

@{
    ViewBag.Title = "Add Home Banner Slider";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Forms</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="~/Admin"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Form Layouts</li>
                    </ol>
                </nav>
            </div>

        </div>
        <!--end breadcrumb-->

        <div class="row">
            <div class="col-lg-12">
                <h6 class="mb-0 text-uppercase">Add Home Banner Slider</h6>
                <hr>
                <div class="card border-top border-0 border-4 border-primary">
                    <div class="card-body p-4">
                        <div class="card-title d-flex align-items-center">
                            <h5 class="mb-0 text-primary">Add Team</h5>
                        </div>
                        <hr>
                        @using (Html.BeginForm("AddHomeBannerSlider", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row g-3" }))
                        {
                            @Html.AntiForgeryToken()
                            
                            <div class="col-12">
                                <label for="image" class="form-label">Member Image</label>
                                <div class="input-group">
                                    <input name="image" class="form-control" type="file" id="image" required>
                                </div>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary"><i class="bx bxs-plus-square"></i> Add Banner</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <h6 class="mb-0 text-uppercase">HomeBannerSlider DataTable</h6>
        <hr>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th width="25%">Id</th>
                                <th width="25%">Image</th>
                                <th width="25%">Edit</th>
                                <th width="25%">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Id</td>
                                <td><img src="@Url.Content("~/Content/Assets/projectImages/HomeBannerSlider/" + @item.BannerImg)" class="img-fluid" height="100" width="100" /></td>

                                <td><a href="@Url.Action("EditHomeBannerSlider", new { id = item.Id })" class="btn btn-primary btn-sm"><i class="bx bxs-edit"></i> Edit</a></td>
                                <td><a href="@Url.Action("DeleteHomeBannerSlider", "Admin",new {id=item.Id})" class="btn btn-danger btn-sm"><i class="bx bxs-trash"></i> Delete</a></td>
                            </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
