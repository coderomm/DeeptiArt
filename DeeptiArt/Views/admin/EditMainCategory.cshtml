@model DeeptiArt.Models.MainCategoryTbl

@{
    ViewBag.Title = "Edit Main Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Forms</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Form Layouts</li>
                    </ol>
                </nav>
            </div>

        </div>
        <!--end breadcrumb-->

        <div class="row">
            <div class="col-lg-12">
                <h6 class="mb-0 text-uppercase">Edit Main Category</h6>
                <hr>
                <div class="card border-top border-0 border-4 border-primary">
                    <div class="card-body p-4">
                        <div class="card-title d-flex align-items-center">

                            <h5 class="mb-0 text-primary">Edit Main Category</h5>
                        </div>
                        <hr>
                        @using (Html.BeginForm("EditMainCategory", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row g-3" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="col-lg-6 col-12">
                                <label for="CategoryName" class="form-label">Category Name</label>
                                <div class="input-group">
                                    <input value="@Model.CategoryName" name="CategoryName" class="form-control" type="text" id="CategoryName">
                                </div>
                            </div>

                            <div class="col-lg-6 col-12">
                                <label for="CategoryImage" class="form-label">Category Image</label>
                                <div class="input-group">
                                    <input name="CategoryImage" class="form-control" type="file" id="CategoryImage">
                                    <input value="@Model.CategoryImage" name="CategoryImage" type="text" hidden>
                                    <img src="~/Content/Assets/projectImages/Category/@Model.CategoryImage" class="img-fluid" style="height:60px;width:60px;" />
                                </div>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary"><i class="bx bxs-check-circle"></i> Edit Category</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

