
@{
    ViewBag.Title = "Add Main Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Forms</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Form Layouts</li>
                    </ol>
                </nav>
            </div>

        </div>
        <!--end breadcrumb-->

        <div class="row">
            <div class="col-lg-12">
                <h6 class="mb-0 text-uppercase">Add Main Category</h6>
                <hr>
                <div class="card border-top border-0 border-4 border-primary">
                    <div class="card-body p-4">
                        <div class="card-title d-flex align-items-center">

                            <h5 class="mb-0 text-primary">Add Main Category</h5>
                        </div>
                        <hr>
                        @using (Html.BeginForm("AddMainCategory", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row g-3" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="col-lg-6 col-12">
                                <label for="CategoryName" class="form-label">Category Name</label>
                                <div class="input-group">
                                    <input name="CategoryName" class="form-control" type="text" id="CategoryName" required>
                                </div>
                            </div>

                            <div class="col-lg-6 col-12">
                                <label for="CategoryImage" class="form-label">Category Image</label>
                                <div class="input-group">
                                    <input name="CategoryImage" class="form-control" type="file" id="CategoryImage" required>
                                </div>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary"><i class="bx bxs-plus-square"></i> Add Category</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <h6 class="mb-0 text-uppercase">Category DataTable</h6>
        <hr>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Category</th>
                                <th>Image</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @ViewBag.MainCategory)
                            {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CategoryName</td>
                                <td><img src="@Url.Content("~/Content/Assets/projectImages/Category/" + @item.CategoryImage)" class="img-fluid" height="50" width="50" /></td>
                                <td><a href="@Url.Action("EditMainCategory", new { id = item.Id })" class="btn btn-danger  btn-sm"><i class="bx bxs-edit"></i> Edit</a></td>
                            </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

